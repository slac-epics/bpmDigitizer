record(mbbo, "$(digi):ARM")
{
	field(DESC, "VMEDIGI Arm Ctl")
	field(DTYP, "Raw Soft Channel")
	field(OUT,  "$(digi):WAV.RARM PP")
	field(ZRST, "Disarmed")
	field(ZRVL, "0")
	field(ONST, "Arm-Once")
	field(ONVL, "1")
	field(TWST, "Arm-Auto")
	field(TWVL, "2")
	field(THST, "SW-Trig")
	field(THVL, "-1")
	field(PINI, "YES")
}

