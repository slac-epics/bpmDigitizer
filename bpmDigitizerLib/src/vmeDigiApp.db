## NOTE 'card' index is ONE (not zero) based!

record(waveform, "$(digi):WAV")
{
	field(DESC, "Raw VMEDIGI Data")
	field(DTYP, "VMEDigi-Waveform")
	field(INP, "#C$(card)S0@")
	field(TSE,  "-1" )
	field(EVNT, "140" )
# NELM must be a multiple of 4 (# of digitizer channels)
	field(NELM, "$(nelm)")
	field(FTVL, "SHORT")
	field(EGU, "Counts")
	field(HOPR, "32768")
	field(LOPR, "-32767")
	field(SCAN, "Passive")
	field(FLNK, "$(digi):WAV_Fanout PP")
}

record( fanout, $(digi):WAV_Fanout )
{
	field(LNK3, "$(digi):WAV:Count PP" )
	field(LNK4, "$(LNK4=)" )
	field(FLNK, "$(digi):ASTA PP")
}

record( calc, "$(digi):WAV:Count" )
{
	field( DESC, "Digitizer Capture Counter" )
	field( INPA, "$(digi):WAV:Count" )
	field( CALC, "A+1" )
	field( EGU,  "samples" )
	field( PREC, "0" )
}

record( calc, "$(digi):WAV:Rate" )
{
	field( DESC, "Digitizer capture rate" )
	field( SCAN, "1 second" )
	field( INPA, "$(digi):WAV:Count NPP MS" )
	field( INPB, "$(digi):WAV:Rate.LA" )
    field( INPC, "0.4" )
	field( CALC, "VAL*C+(A-B)*(1-C)" )
	field( LOLO, "$(LOLO=9)" )
	field( LOW,  "$(LOW=119)" )
	field( HIGH, "$(HIGH=121)" )
	field( HIHI, "$(HIHI=361)" )
	field( LSV,  "$(LSV=MINOR)" )
	field( LLSV, "$(LLSV=MAJOR)" )
	field( HSV,  "$(HSV=MINOR)" )
	field( HHSV, "$(HHSV=MAJOR)" )
	field( EGU,  "samp/sec" )
	field( PREC, "1" )
}


record(subArray, "$(digi):WAV1")
{
	field(INP, "$(digi):WAV NPP MS")
	field(DTYP, "Soft Channel" )
	field(FTVL, "SHORT" )
	field(MALM, "$(nelm)" )
	field(NELM, "$(nelm)" )
	field(INDX, "0" )
	field(SCAN, "0.2 second")
}

record(subArray, "$(digi):WAV2")
{
	field(INP, "$(digi):WAV NPP MS")
	field(DTYP, "Soft Channel" )
	field(FTVL, "SHORT" )
	field(MALM, "$(nelm)" )
	field(NELM, "$(nelm)" )
	field(INDX, "0" )
	field(SCAN, "0.2 second")
}

record(bo, "$(digi):PGA")
{
	field(DESC, "VMEDIGI Range Ctl.")
	field(DTYP, "BusAddress")
	field(OUT,  "#C0S0@vmeDigi$(card)+0x7fb1a,be16")
	field(MASK, "0x8000")
	field(ZNAM, "2.25Vpp")
	field(ONAM, "1.5Vpp")
	field(VAL,  "1")
	field(PINI, "YES")
}

record(bo, "$(digi):CLK")
{
	field(DESC, "VMEDIGI Clock Src")
	field(DTYP, "BusAddress")
	field(OUT,  "#C0S0@vmeDigi$(card)+0x7fb1a,be16")
	field(MASK, "0x400")
	field(ZNAM, "Internal")
	field(ONAM, "External")
	field(VAL,  "1")
	field(PINI, "YES")
}

